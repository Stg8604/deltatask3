<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appy">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name and Amount to split"
        android:fontFamily="@font/averia_libre"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:id="@+id/amsp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/spln"
        android:hint="Enter name"
        android:layout_below="@+id/amsp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/designlogin"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spln"
        android:id="@+id/amname"
        android:textColor="@color/black"
        android:hint="Split name"
        android:background="@drawable/designlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/amname"
        android:layout_centerHorizontal="true"
        android:id="@+id/amedt"
        android:hint="Enter Money"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:background="@drawable/designlogin"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amedt"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:text="Enter"
        android:id="@+id/amenter"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/gray"
        />

</RelativeLayout>